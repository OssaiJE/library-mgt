<!-- Start: Page Banner -->
<section class="page-banner services-banner">
    <div class="container">
        <div class="banner-header">
            <h2>Search Result for {{keywords}} on {{specialization}}</h2>
            <span class="underline center"></span>
            <p class="lead">Here are all the search result for {{keywords}} on the specialization {{specialization}}</p>
        </div>
        <div class="breadcrumb">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/books">Books</a></li>
                <li>Search Result</li>
            </ul>
        </div>
    </div>
</section>
<!-- End: Page Banner -->

<!-- Start: Products Section -->
<div id="content" class="site-content">
    <div id="primary" class="content-area">
        <main id="main" class="site-main">
            <div class="books-full-width">
                <div class="container">
                    <!-- Start: Search Section -->
                    <section class="search-filters">
                        <div class="container">
                            <div class="filter-box">
                                <h3>What are you looking for at the library?</h3>
                                <form action="/search" method="get">
                                    <div class="col-md-6 col-sm-6">
                                        <div class="form-group">
                                            <label class="sr-only" for="keywords">Search by Keyword</label>
                                            <input class="form-control" placeholder="Search by Keyword" id="keywords"
                                                name="keywords" type="text" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6">
                                        <div class="form-group">
                                            <select name="specialization" id="catalog" class="form-control">
                                                <option selected>All Specialization</option>
                                                <option>Artificial Intelligence (AI)</option>
                                                <option>Algorithms and Data Structures</option>
                                                <option>Computer Architecture</option>
                                                <option>Computer Graphics</option>
                                                <option>Cybersecurity</option>
                                                <option>Database Systems</option>
                                                <option>Machine Learning</option>
                                                <option>Mobile App Development</option>
                                                <option>Networks</option>
                                                <option>Operating Systems</option>
                                                <option>Robotics</option>
                                                <option>Software Engineering</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-6">
                                        <div class="form-group">
                                            <input class="form-control" type="submit" value="Search" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                    <!-- End: Search Section -->

                    <div class="booksmedia-fullwidth">
                        <ul>
                            {{#if searchResults.length}}
                                {{#each searchResults}}
                                    <li>
                                        <div class="book-list-icon green-icon"></div>
                                        <figure>
                                            <a href="/book/{{_id}}"><img src="/{{coverimage}}" alt="{{booktitle}}"></a>
                                            <figcaption>
                                                <header>
                                                    <h4><a href="/book/{{_id}}"> {{booktitle}}</a></h4>
                                                    <p><strong>Author:</strong> {{author}}</p>
                                                    <p><strong>Status:</strong> {{status}}</p>
                                                    <p><strong>Availability:</strong> {{availability}}</p>
                                                    <p><strong>Summary:</strong> {{summary}}</p>
                                                </header>
                                                <div class="actions">
                                                    <a href="/book/{{_id}}">
                                                        <p><strong> View Details</strong></p>
                                                    </a>
                                                </div>
                                            </figcaption>
                                        </figure>
                                    </li>
                                {{/each}}
                            {{else}}
                                <h4>No result available for the keyword {{keywords}} on {{specialization}}</h4> <br> <br> <br>

                            {{/if}}
                        </ul>
                    </div>
                    <nav class="navigation pagination text-center">
                        <h2 class="screen-reader-text">Posts navigation</h2>
                        <div class="nav-links">
                            <a class="prev page-numbers" href="#."><i class="fa fa-long-arrow-left"></i> Previous</a>
                            <a class="page-numbers current" href="#.">1</a>
                            <span class="page-numbers">2</span>
                            <a class="page-numbers" href="#.">3</a>
                            <a class="page-numbers" href="#.">4</a>
                            <a class="next page-numbers" href="#.">Next <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </nav>
                </div>
            </div>
        </main>
    </div>
</div>
<!-- End: Products Section -->